@URLShorteningService_HostAddress = http://localhost:5119

# Test URL shortening without user ID
POST {{URLShorteningService_HostAddress}}/api/URLShortening/shorten
Content-Type: application/json

{
  "longUrl": "https://www.example.com"
}

###

# Test URL shortening with user ID (will add to history)
POST {{URLShorteningService_HostAddress}}/api/URLShortening/shorten
Content-Type: application/json

{
  "longUrl": "https://www.google.com",
  "userId": 1
}

###

# Test URL shortening with custom alias and user ID
POST {{URLShorteningService_HostAddress}}/api/URLShortening/shorten
Content-Type: application/json

{
  "longUrl": "https://www.github.com",
  "customAlias": "github",
  "userId": 1
}

